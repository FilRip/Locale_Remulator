<Window x:Class="LREditor.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LREditor"
        Title="InputBox"
        MaxWidth="320"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <TextBlock Margin="0,0,0,5" Text="New Name:" />
        <TextBox x:Name="TextBox_NewName" Margin="0,5,0,5" TextWrapping="Wrap" />
        <StackPanel Margin="0,5,0,0" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Margin="0,0,5,0" Padding="20,3"
                    Click="Button_Save_Click" Content="Save" IsDefault="True" />
            <Button Margin="5,0,0,0" Padding="20,3"
                    Content="Cancel" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
